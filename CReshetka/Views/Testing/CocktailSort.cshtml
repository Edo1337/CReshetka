@{
    ViewData["Title"] = "Шейкерная сортировка (Cocktail Sort)";
}
<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <fieldset class="form-group">
            <div class="question">
                <legend class="mt-4">1. Какова временная сложность шейкерной сортировки (Cocktail Sort) для больших массивов?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question1" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        O(n)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question1" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        O(n log n)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question1" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        O(n^2)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question1" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        O(log n)
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">2. Что происходит в процессе прохода вперед шейкерной сортировки?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question2" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Удаление элементов из массива
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question2" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Перестановка элементов в случайном порядке
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question2" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        Обмен местами соседними элементами, если они находятся в неправильном порядке
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question2" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        Создание временного массива
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">3. Какова основная идея шейкерной сортировки (Cocktail Sort)?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question3" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Удаление элементов из массива
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question3" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Сортировка элементов по возрастанию
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question3" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        Обмениваться местами соседними элементами
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question3" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        Использование дополнительной памяти
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">4. Какие проходы выполняет шейкерная сортировка?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question4" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Только вперед
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question4" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Только назад
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question4" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        Вперед и назад
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question4" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        Случайные проходы
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">5. Что происходит в процессе прохода назад?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question5" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Удаление элементов из массива
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question5" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Перестановка элементов в случайном порядке
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question5" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        Обмен местами элементами, если они находятся в неправильном порядке
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question5" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        Создание временного массива
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">6. Какие действия выполняет метод "Swap"?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question6" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Удаляет элемент из массива
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question6" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Вставляет элемент в массив
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question6" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        Обменивает местами два элемента массива
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question6" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        Изменяет порядок элементов в массиве
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">7. Какой вывод делает программа после сортировки?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question7" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Отсортированный массив
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question7" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Неотсортированный массив
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question7" id="optionsRadios3">
                    <label class="form-check-label" for="optionsRadios3">
                        Временной массив
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question7" id="optionsRadios4" value="correct">
                    <label class="form-check-label" for="optionsRadios4">
                        Отсортированный массив исходных данных
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">8. Каково преимущество шейкерной сортировки по сравнению с сортировкой пузырьком?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question8" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Высокая производительность
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question8" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Низкая временная сложность
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question8" id="optionsRadios3">
                    <label class="form-check-label" for="optionsRadios3">
                        Не требует дополнительной памяти
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question8" id="optionsRadios4" value="correct">
                    <label class="form-check-label" for="optionsRadios4">
                        Улучшенный механизм движения может быть более эффективным
                    </label>
                </div>
            </div>

            <div class="question">
                <legend class="mt-4">9. Какой недостаток шейкерной сортировки?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question9" id="optionsRadios1">
                    <label class="form-check-label" for="optionsRadios1">
                        Высокая производительность для больших массивов
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question9" id="optionsRadios2">
                    <label class="form-check-label" for="optionsRadios2">
                        Временная сложность O(n log n)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question9" id="optionsRadios3" value="correct">
                    <label class="form-check-label" for="optionsRadios3">
                        Низкая производительность для больших массивов из-за временной сложности O(n^2)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="question9" id="optionsRadios4">
                    <label class="form-check-label" for="optionsRadios4">
                        Отсутствие механизма движения
                    </label>
                </div>
            </div>

            <input type="hidden" id="resultTest" name="resultTest" value="false">
            <input type="hidden" id="correctAnswers" name="correctAnswers" value="" />
            <input type="hidden" id="resultsMessage" name="resultsMessage" value="" />
            <input type="hidden" id="totalQuestions" name="totalQuestions" value="" />

            <br />
            <div style="text-align: center;">
                <button type="submit" class="btn btn-lg btn-light" style="margin-bottom: 15px" onclick="calculateResults()">Проверить результат</button>
            </div>

        </fieldset>
    </form>
</div>

<script>
    function calculateResults() {
        // Инициализация счетчиков
        var correctAnswers = 0;
        var resultTest;
        // Получение всех элементов с классом "question"
        var questions = document.getElementsByClassName("question");
        // Перебор всех вопросов
        for (var i = 0; i < questions.length; i++) {
            var question = questions[i];
            // Получение ответа пользователя
            var userAnswer = question.querySelector("input:checked");
            // Получение правильного ответа
            var correctAnswer = question.querySelector("input[value=\"correct\"]");
            // Проверка, выбран ли ответ пользователем
            if (userAnswer !== null) {
                // Проверка выбранного ответа на правильность
                if (userAnswer === correctAnswer) {
                    correctAnswers++;
                }
            }
        }

        if (questions.length === correctAnswers) {
            resultTest = true;
            resultsMessage = "Тест пройден успешно";
        } else {
            resultTest = false;
            resultsMessage = "К сожалению, вы не прошли тест, прочитайте теорию и снова вернитесь к тесту";
        }

        // Установка значения resultTest в скрытое поле формы
        document.getElementById("resultTest").value = resultTest;
        document.getElementById("correctAnswers").value = correctAnswers;
        document.getElementById("resultsMessage").value = resultsMessage;
        document.getElementById("totalQuestions").value = questions.length;
    }
</script>



