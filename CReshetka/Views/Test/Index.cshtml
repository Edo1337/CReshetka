@{
    ViewData["Title"] = "Тест";
}
<h1>@ViewData["Title"]</h1>

<div id="quiz">
    <!-- Вопрос 1 -->
    <div class="question">
        <p>Вопрос 1: ...</p>
        <label><input type="radio" name="q1" value="correct"> Верный ответ</label>
        <label><input type="radio" name="q1"> Неверный ответ</label>
    </div>

    <!-- Вопрос 2 -->
    <div class="question">
        <p>Вопрос 2: ...</p>
        <label><input type="radio" name="q2" value="correct"> Верный ответ</label>
        <label><input type="radio" name="q2"> Неверный ответ</label>
    </div>

    <!-- Добавьте дополнительные вопросы, если необходимо -->
    <!-- Кнопка для расчета результатов -->
    <button onclick="calculateResults()">Рассчитать результаты</button>

    <!-- Вывод результатов -->
    <div id="results"></div>
</div>

<!-- Подключение вашего JS-кода -->
<script>
    function calculateResults() {
        var totalQuestions = 0;
        var correctAnswers = 0;
        var questions = document.getElementsByClassName("question");

        for (var i = 0; i < questions.length; i++) {
            var question = questions[i];
            var userAnswer = question.querySelector("input:checked");
            var correctAnswer = question.querySelector("input[value='correct']");

            if (userAnswer !== null) {
                totalQuestions++;

                if (userAnswer === correctAnswer) {
                    correctAnswers++;
                }
            }
        }

        var resultsMessage = "Вы ответили правильно на " + correctAnswers + " из " + totalQuestions + " вопросов.";
        document.getElementById("results").innerHTML = resultsMessage;
    }
</script>
