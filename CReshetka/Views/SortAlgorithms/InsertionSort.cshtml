    ViewData["Title"] = "Сортировка вставками (Insertion Sort)";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <p>
        Сортировка вставками - это алгоритм сортировки, который строит отсортированную последовательность по одному элементу за раз. На каждом шаге берется один из элементов входных данных и вставляется в подходящее место уже отсортированного списка.
    </p>
    <p>
        Принцип работы алгоритма заключается в том, что на каждом шаге текущий элемент сравнивается с элементами, уже находящимися в отсортированной части массива. При необходимости текущий элемент сдвигается вправо, чтобы уступить место для вставки.
    </p>

    <p>
        <h3><span>Пример сортировки вставками на C#:</span></h3>
    </p>
<pre>
<code> 
using System;

class InsertionSort
{
    static void Main()
    {
        int[] array = { 64, 34, 25, 12, 22, 11, 90 };

        Console.WriteLine("Исходный массив:");
        PrintArray(array);

        InsertionSortAlgorithm(array);

        Console.WriteLine("\nОтсортированный массив:");
        PrintArray(array);
    }

    static void InsertionSortAlgorithm(int[] arr)
    {
        int n = arr.Length;
        for (int i = 1; i < n; ++i)
        {
            int key = arr[i];
            int j = i - 1;

            // Сдвигаем элементы массива, которые больше key, вправо
            while (j >= 0 && arr[j] > key)
            {
                arr[j + 1] = arr[j];
                j = j - 1;
            }
            arr[j + 1] = key;
        }
    }

    static void PrintArray(int[] arr)
    {
        foreach (var item in arr)
        {
            Console.Write(item + " ");
        }
        Console.WriteLine();
    }
}    
</code>
